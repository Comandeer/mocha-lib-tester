{
  "name": "@comandeer/mocha-lib-tester",
  "version": "0.0.0",
  "description": "All testing utilities in one, small package",
  "main": "dist/mocha-lib-tester.js",
  "module": "dist/mocha-lib-tester.es2015.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "bin": {
    "mlt": "bin/mlt"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.js\" \"bin/**/*\" \"tests/*.js\"",
    "build": "rlb",
    "pretest": "npm run lint && npm run build",
    "test": "nyc mocha \"tests/**/*.js\" --exclude \"tests/{helpers,fixtures/**}/*.js\" --timeout 15000 --require @babel/register",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "version": "npm test && npm run build && git add -f dist/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "improvement",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "dist/**/*.js",
      "tests/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/mocha-lib-tester.git"
  },
  "keywords": [
    "mocha",
    "test"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/mocha-lib-tester/issues"
  },
  "homepage": "https://github.com/Comandeer/mocha-lib-tester#readme",
  "dependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "@comandeer/eslint-config": "^0.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.0",
    "codecov": "^3.7.2",
    "eslint": "^7.7.0",
    "glob": "^7.1.6",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-lib-instrument": "^4.0.3",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.0.2",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "pirates": "^4.0.1",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0"
  },
  "devDependencies": {
    "@comandeer/is-ci": "^3.0.0",
    "@comandeer/rollup-lib-bundler": "^0.11.0",
    "commitplease": "^3.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "rimraf": "^3.0.2"
  }
}
