{
  "name": "@comandeer/mocha-lib-tester",
  "version": "0.4.1",
  "description": "All testing utilities in one, small package",
  "main": "dist/mocha-lib-tester.js",
  "module": "dist/mocha-lib-tester.es2015.js",
  "types": "./mlt.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "bin": {
    "mlt": "bin/mlt"
  },
  "files": [
    "bin",
    "dist",
    "mlt.d.ts"
  ],
  "scripts": {
    "prebuild": "node dev/prepareChaiPreamble",
    "build": "rlb",
    "pretest": "npm run build",
    "test": "node ./bin/mlt",
    "version": "npm test && npm run build && git add -f dist/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "improvement",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "dist/**/*.js",
      "tests/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/mocha-lib-tester.git"
  },
  "keywords": [
    "mocha",
    "test"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/mocha-lib-tester/issues"
  },
  "homepage": "https://github.com/Comandeer/mocha-lib-tester#readme",
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "@comandeer/eslint-config": "^0.4.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.2",
    "codecov": "^3.8.2",
    "enumify": "^2.0.0",
    "eslint": "^7.29.0",
    "glob": "^7.1.7",
    "is-ci": "^3.0.0",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-lib-instrument": "^4.0.3",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.0.2",
    "mocha": "^9.0.1",
    "npm-run-path": "^4.0.1",
    "nyc": "^15.1.0",
    "pirates": "^4.0.1",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/types": "^7.14.5",
    "@comandeer/is-ci": "^3.0.0",
    "@comandeer/rollup-lib-bundler": "^0.13.0",
    "commitplease": "^3.2.0",
    "cross-spawn": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "fs-extra": "^10.0.0",
    "husky": "^6.0.0",
    "terser": "^5.7.0"
  }
}
